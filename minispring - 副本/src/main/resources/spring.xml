<beans>
    <bean id="userDao" class="com.green.spring.test.UserDao"/>
    <bean class="com.green.spring.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>
    <bean id="beforeAdvice" class="com.green.spring.test.UserDaoBeforeAdvice"/>
    <bean id="methodInterceptor" class="com.green.spring.aop.framework.adapter.MethodBeforeAdviceInterceptor">
        <property name="advice" ref="beforeAdvice"/>
    </bean>
    <bean id="pointcutAdvisor" class="com.green.spring.aop.aspect.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* com.green.spring.test.IUserDao.*(..))"/>
        <property name="advice" ref="methodInterceptor"/>
    </bean>

</beans>



